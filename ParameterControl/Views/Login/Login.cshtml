@model ParameterControl.Models.Login.LoginViewModel

@{
    ViewData["Title"] = "login";
}


<div class="login">  
    <div class="box">
        <div _ngcontent-xow-c136="" class="card_element animate fadeIn one">
            <form class="content" asp-action="login">
                <p class="logo icon_281 "></p>
                <p class="title">Inicio de sesión</p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="user" class="">Usuario</label>
                    <input asp-for="user" class="input_login" placeholder = "Usuario"/>
                    <span asp-validation-for="user" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="">Contraseña</label>
                    <input asp-for="password" type="password" class="input_login" placeholder="Contraseña" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="box_btn">
                    <a class="btn_login" asp-area="" asp-controller="Home" asp-action="Index">Acceder</a>

                </div>
               
            </form>
        </div>
    </div>
        
 </div>
        

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
