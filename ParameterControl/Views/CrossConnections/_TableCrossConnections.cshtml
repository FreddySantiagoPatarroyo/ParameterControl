@using System;
@using System.Reflection;
@using ParameterControl.Models.Pagination
@using ParameterControl.Models.CrossConnection
@using ParameterControl.Models.Pagination
@model PaginationResult<TableCrossConnectionViewModel>

@{
    PropertyInfo GetRowInfo(string RowValue)
    {
        var property = typeof(CrossConnectionViewModel).GetProperty(RowValue);

        return property;
    }
}
<div class="content_policies">
    <div class="card_policies card_element flex_box" id="card_policies">
        <div class="flex_box titulation">
            <p class="title_table font_bold">Tomas Transversales</p>
            @if (Model.Elements.IsCreate)
            {
                <a class="button button_primary" asp-controller="CrossConnections" asp-action="Create">
                    <p class="text font_bold">Crear</p>
                </a>
            }
        </div>
        <div class="list">
            <div class="element_table">
                @if (Model.Elements.Filter)
                {
                    <div class="content_filter flex_box">
                        <a class="button button_primary" title="Filtrar" asp-controller="CrossConnections" asp-action="Filter">
                            <p class="text font_bold">Filtrar Tabla</p>
                        </a>

                        @if (ViewBag.ApplyFilter)
                        {
                            <a class="button button_secondary" title="Filtrar" asp-controller="CrossConnections" asp-action="CrossConnections">
                                <p class="text font_bold">Eliminar filtros</p>
                            </a>
                        }
                    </div>
                }
                
                <div id="table" class="content_table">
                    <div class="tables flex_box">
                        <div class="columns">
                            @foreach (var Colunm in Model.Elements.Rows)
                            {
                                <div class="@Colunm.Name column flex_box order">
                                    <p class="text font_bold">@Colunm.Name</p>
                                </div>
                            }
                            @if (Model.Elements.IsView || Model.Elements.IsEdit || Model.Elements.IsInactivate || Model.Elements.IsActivate)
                            {
                                <div class="column actions flex_box">
                                    <p class="text font_bold">Acciones</p>
                                </div>
                            }
                        </div>
                        @if (Model.Elements.Data.Count() == 0)
                        {
                            <p>No existe informacion</p>
                        }
                        else
                        {
                            @foreach (var CrossConnection in Model.Elements.Data)
                            {
                                @if (CrossConnection.State)
                                {
                                    <div class="rows">
                                        @foreach (var Row in Model.Elements.Rows)
                                        {
                                            <div class="row_table flex_box">
                                                <p id="text_row" class="text flex_box">@GetRowInfo(Row.Value)?.GetValue(CrossConnection)?.ToString()</p>
                                            </div>
                                        }
                                        @if (Model.Elements.IsView || Model.Elements.IsEdit || Model.Elements.IsInactivate)
                                        {
                                            <div class="row_table flex_box actions">
                                                @if (Model.Elements.IsView)
                                                {
                                                    <a class="button_icon button_primary" title="Ver" asp-controller="CrossConnections" asp-action="View" asp-route-code="@CrossConnection.Code">
                                                        <i class="icon icon_041"></i>
                                                    </a>
                                                }
                                                @if (Model.Elements.IsEdit)
                                                {
                                                    <a class="button_icon button_primary" title="Editar" asp-controller="CrossConnections" asp-action="Edit" asp-route-code="@CrossConnection.Code">
                                                        <i class="icon icon_106"></i>
                                                    </a>
                                                }
                                                @if (Model.Elements.IsInactivate)
                                                {
                                                    <a class="button_icon button_primary" title="Inactivar" asp-controller="CrossConnections" asp-action="Desactive" asp-route-code="@CrossConnection.Code">
                                                        <i class="icon icon_196"></i>
                                                    </a>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="rows disabled">
                                        @foreach (var Row in Model.Elements.Rows)
                                        {
                                            <div class="row_table flex_box">
                                                <p id="text_row" class="text flex_box">@GetRowInfo(Row.Value)?.GetValue(CrossConnection)?.ToString()</p>
                                            </div>
                                        }
                                        @if (Model.Elements.IsView || Model.Elements.IsEdit || Model.Elements.IsActivate)
                                        {
                                            <div class="row_table flex_box actions">
                                                @if (Model.Elements.IsView)
                                                {
                                                    <button class="button_icon button_primary disabled" title="Ver" disabled>
                                                        <i class="icon icon_041"></i>
                                                    </button>
                                                }
                                                @if (Model.Elements.IsEdit)
                                                {
                                                    <button class="button_icon button_primary disabled" title="Editar" disabled>
                                                        <i class="icon icon_106"></i>
                                                    </button>
                                                }
                                                @if (Model.Elements.IsActivate)
                                                {
                                                    <a class="button_icon button_primary" title="Activar" asp-controller="CrossConnections" asp-action="Active" asp-route-code="@CrossConnection.Code">
                                                        <i class="icon icon_199"></i>
                                                    </a>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
                <div class="pagination flex_box">
                    <partial name="_Pagination" />
                </div>
            </div>
        </div>
    </div>
</div>



