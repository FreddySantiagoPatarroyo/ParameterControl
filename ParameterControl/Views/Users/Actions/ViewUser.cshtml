@using ParameterControl.Models.User;
@model UserViewModel;

@{
    ViewData["Title"] = "Ver Usuario";
    string ErrorEntyNull = "No existe un usuario con el codigo " + ViewBag.CodeSend + ",Users";
    string ErrorSuccess = "Se genero un problema al obtener la informacion,Users";
}

<partial name="_Menu" />

@if (!ViewBag.Success)
{
    <partial name="_ModalError" model="ErrorSuccess" />
}
else
{
    @if (ViewBag.EntyNull)
    {
        <partial name="_ModalError" model="ErrorEntyNull" />
    }
    else
    {
        <div class="box_view">
            <div class="bg__blur"></div>
            <form class="form__container">

                <div class="card__container">
                    <div class="header_form">
                        <img src="/images/iconApple.png" />
                        <h1>Detalles de Usuario</h1>
                    </div>

                    <div class="form_group">
                        <p class="title_form">Código Usuario:</p>
                        <p>@Model.Code</p>
                    </div>
                    <div class="form_groupm">
                        <p class="title_form">Usuario:</p>
                        <p>@Model.User_</p>
                    </div>
                    <div class="form_group">
                        <p class="title_form">Email:</p>
                        <p>@Model.Email</p>
                    </div>
                    <div class="form_group">
                        <p class="title_form">Nombre de Usuario:</p>
                        <p>@Model.Name</p>
                    </div>
                    <div class="form_groupm">
                        <p class="title_form">Fecha de Creación:</p>
                        <p>@Model.CreationDateFormat</p>
                    </div>
                    <div class="form_group">
                        <p class="title_form">Fecha de Acualización:</p>
                        <p>@Model.UpdateDateFormat</p>
                    </div>

                    <div class="btn_container">
                        <a class="button button_secondary btn_cancel-view" asp-controller="Users" asp-action="Users"><p class="text font_bold">Cancelar</p></a>
                    </div>
                </div>
            </form>
        </div>
    }
}