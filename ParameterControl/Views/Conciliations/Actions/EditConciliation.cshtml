@using ParameterControl.Models.Conciliation;
@model Conciliation;

@{
}

<partial name="_Menu" />

<div id="box__conciliations">
    <div class="bg__blur"></div>
    <form asp-controller="Conciliations" class="form__container">
        <div class="card__container">
            <div class="header_form">
                <img src="/images/iconApple.png" />
                <h1>Editar Conciliación</h1>
            </div>

            <div class="form_group">
                <label for="code--polices" asp-for="Code" class="label_form">Código*</label>
                <input type="text" class="code" id="code--policies" name="Code" asp-for="Code" readonly />
            </div>
            <div class="form_group">
                <label for="description--policies" asp-for="Name" class="label_form">Nombre*</label>
                <input type="text" class="description" id="description--policies" name="Name" asp-for="Name" readonly />
            </div>
            <div class="form_group">
                <label for="objective--policies" asp-for="Description" class="label_form">Descripcion*</label>
                <textarea class="objective" id="objective--policies" name="Description" asp-for="Description"></textarea>
            </div>

            <p class="note_text"><span>Nota: </span>Los campos con (*) son obligatorios</p>

            <div class="btn_container">
                <a class="button button_secondary" asp-controller="Conciliations" asp-action="Conciliations"><p class="text font_bold">Cancelar</p></a>
                <button class="button button_primary"><p class="text font_bold">Actualizar</p></button>
            </div>
        </div>
    </form>
</div>


