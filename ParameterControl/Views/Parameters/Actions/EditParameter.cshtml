@using ParameterControl.Models.Parameter;
@model Parameter;

@{
}

<partial name="_Menu" />

<div class="box_edit">
    <div class="bg__blur"></div>
    <form asp-controller="Parameters" asp-action="Edit" class="form__container">
        <div asp-validation-summary="ModelOnly" class="text_error"></div>

        <div class="card__container">
            <div class="header_form">
                <img src="/images/iconApple.png" />
                <h1>Editar Parametro</h1>
            </div>

            <div class="form_group">
                <div class="field">
                    <label for="parameter--parameters" asp-for="_Parameters" class="label_form">Parámetro*</label>
                    <div class="input">
                        <input type="text" class="code" id="parameter--parameters" name="_Parameters" asp-for="_Parameters" readonly />
                    </div>
                    <span asp-validation-for="_Parameters" class="text_error"></span>
                </div>
            </div>

            <div class="form_group">
                <div class="field">
                    <label for="value--parameters" asp-for="Value" class="label_form">Valor*</label>
                    <div class="input">
                        <input type="text" class="description" id="value--parameters" name="Value" asp-for="Value" readonly />
                    </div>
                    <span asp-validation-for="Value" class="text_error"></span>
                </div>
            </div>

            <div class="form_group">
                <div class="field">
                    <label for="description--parameters" asp-for="Description" class="label_form">Descripción*</label>
                    <div class="textarea">
                        <textarea class="objective" id="description--parameters" name="Description" asp-for="Description"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text_error"></span>
                </div>
            </div>

            <div class="form_group">
                <div class="field">
                    <label for="type--parameters" asp-for="ParameterType" class="label_form">Tipo*</label>
                    <div class="textarea">
                        <textarea class="objective" id="type--parameters" name="ParameterType" asp-for="ParameterType"></textarea>
                    </div>
                    <span asp-validation-for="ParameterType" class="text_error"></span>
                </div>
            </div>

            <p class="note_text"><span>Nota: </span>Los campos con (*) son obligatorios</p>

            <div class="btn_container">
                <a class="button button_secondary" asp-controller="Parameters" asp-action="Parameters"><p class="text font_bold">Cancelar</p></a>
                <button type="submit" class="button button_primary"><p class="text font_bold">Actualizar</p></button>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}