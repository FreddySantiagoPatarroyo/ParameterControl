@using ParameterControl.Models.Parameter;
@model ParameterViewModel;

@{
    ViewData["Title"] = "Ver Parametros";
    string ErrorEntyNull = "No existe un parametro con el codigo " + ViewBag.CodeSend + ",Parameters";
    string ErrorSuccess = "Se genero un problema al obtener la informacion,Parameters";
}

<partial name="_Menu" />

@if (!ViewBag.Success)
{
    <partial name="_ModalError" model="ErrorSuccess" />
}
else
{
    @if (ViewBag.EntyNull)
    {
        <partial name="_ModalError" model="ErrorEntyNull" />
    }
    else
    {
        <div class="box_view">
            <div class="bg__blur"></div>
            <form class="form__container">

                <div class="card__container">
                    <div class="header_form">
                        <img src="/images/iconApple.png" />
                        <h1>Detalles de Parametro</h1>
                    </div>

                    <div class="form_group">
                        <p class="title_form">Parametro:</p>
                        <p>@Model.Parameter_</p>
                    </div>
                    <div class="form_groupm">
                        <p class="title_form">Valor:</p>
                        <p>@Model.Value</p>
                    </div>
                    <div class="form_group">
                        <p class="title_form">Descripción:</p>
                        <p>@Model.Description</p>
                    </div>
                    <div class="form_group">
                        <p class="title_form">Tipo:</p>
                        <p>@Model.ParameterType</p>
                    </div>

                    <div class="btn_container">
                        <a class="button button_secondary btn_cancel-view" asp-controller="Parameters" asp-action="Parameters"><p class="text font_bold">Cancelar</p></a>
                    </div>
                </div>
            </form>
        </div>
    }
}