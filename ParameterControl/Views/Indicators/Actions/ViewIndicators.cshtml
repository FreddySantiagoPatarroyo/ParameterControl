@using ParameterControl.Models.Indicator;
@model Indicator;

@{
}

<partial name="_Menu" />

<div class="box_view">
    <div class="bg__blur"></div>
    <form class="form__container">

        <div class="card__container">
            <div class="header_form">
                <img src="/images/iconApple.png" />
                <h1>Detalles del Indicador</h1>
            </div>

            <div class="form_group">
                <p class="title_form">Nombre:</p>
                <p>@Model.Name</p>
            </div>
            <div class="form_groupm">
                <p class="title_form">Descripción:</p>
                <p>@Model.Description</p>
            </div>
            <div class="form_group">
                <p class="title_form">Formula:</p>
                <p>@Model.Formula</p>
            </div>
            <div class="form_group">
                <p class="title_form">Escenario:</p>
                <p>@Model.Scenery</p>
            </div>

            <div class="btn_container">
                <a class="button button_secondary btn_cancel-view" asp-controller="Indicators" asp-action="Indicators"><p class="text font_bold">Cancelar</p></a>
            </div>
        </div>
    </form>
</div>