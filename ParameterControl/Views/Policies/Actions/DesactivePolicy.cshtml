@using ParameterControl.Models.Policy;
@model Policy;

@{
    ViewData["Title"] = "Desactivar Politicas";
}

<partial name="_Menu" />

<div class="box_delete">
    <div class="bg__blur"></div>
    <form asp-controller="Policies" asp-action="DesactivePolicy" class="form__container">

        <div class="card__container">
            <div class="header_form">
                <img src="/images/iconApple.png" />
                <h1>Desactivar Politica</h1>
                <h2>¿Está seguro de desactivar la politica @Model.Name?</h2>
            </div>

            <input type="hidden" asp-for="Id"/>

            <div class="btn_container">
                <a class="button button_secondary" asp-controller="Policies" asp-action="Policies"><p class="text font_bold">Cancelar</p></a>
                <button class="button button_primary"><p class="text font_bold">Desactivar</p></button>
            </div>
        </div>
    </form>
</div>